{
  /* Visit https://firebase.google.com/docs/database/security to learn more about security rules. */
  "rules": {
    "users":{
      "$uid":{
        ".read": "($uid === auth.uid) || (root.child('users').child(auth.uid).child('roles').val() === 'owner')",
        ".write": "($uid === auth.uid) || (root.child('users').child(auth.uid).child('roles').val() === 'owner')",

        "roles":
        {
          ".read": true,
          ".write": "($uid === auth.uid) && (!data.exists() || !newData.exists()) ||
          (root.child('users').child(auth.uid).child('roles').val() === 'owner')"
        }
      }
    },
    "kategori" :{
      ".read": true,
      ".write":  "(root.child('users').child(auth.uid).child('roles').val() === 'owner') ||
      (root.child('users').child(auth.uid).child('roles').val() === 'admin')"
    },

  }
}
